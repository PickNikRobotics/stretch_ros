  <!-- ! Realsense Depth Camera Does not work from xacro's now -->
  <gazebo reference="camera_depth_optical_frame">
    <sensor name="realsense_d435" type="rgbd_camera">
      <update_rate>60</update_rate>
      <camera name="camera">
        <horizontal_fov>1.0472</horizontal_fov>
        <lens>
          <intrinsics>
            <fx>554.25469</fx>
            <fy>554.25469</fy>
            <cx>320.5</cx>
            <cy>240.5</cy>
            <s>0</s>
          </intrinsics>
        </lens>
        <distortion>
          <k1>0.0</k1>
          <k2>0.0</k2>
          <k3>0.0</k3>
          <p1>0.0</p1>
          <p2>0.0</p2>
          <center>0.5 0.5</center>
        </distortion>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.01</near>
          <far>300</far>
        </clip>
        <depth_camera>
          <clip>
            <near>0.1</near>
            <far>10</far>
          </clip>
        </depth_camera>
        <noise>
          <type>gaussian</type>
          <mean>0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
    </sensor>
  </gazebo>

